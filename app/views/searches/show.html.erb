<h1>You searched for: <div> <%=params[:q] %><div><h1>

        <ol>
          <% @results.each do |r|%>
            <li><img src="<%=r.user_image_url%>" height = "42", width = "42"/>
              <%= r.user%>:<div> <%=r.text%><div> Date & Time: <%=r.time_stamp%>
                  <%tweet = Tweet.new(:twitter_user => r.user,
                                      :tweeted_text => r.text,
                                      :tweeted_at => r.time_stamp)%>

                  <%= form_for(tweet) do |form|%>
                    <%= form.hidden_field(:twitter_user)%>
                    <%= form.hidden_field(:tweeted_text)%>
                    <%= form.hidden_field(:tweeted_at)%>
                    <%= form.submit('Save')%>
                    <%end%>
            </li>
            <% end %>
        </ol>

